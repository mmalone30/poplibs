
.main-header
  h1 Poplibs.
  h2 Madlibs on the internet.
  button(ng-click="randomLib()") Next Poplib

.main-content(ng-show='poplib==1')
  .container
    h4 Buddy Cops!
    .input-group
      label Full Name for a guy
      .input
        input(type="text", ng-model="name1")
    .input-group
      label Number
      .input
        input(type="text", ng-model="number")
    .input-group
      label Full Name for a different guy
      .input
        input(type="text", ng-model="name2")
    .input-group
      label Type of Girl Relative (Mother, sister, etc)
      .input
        input(type="text", ng-model="relative")
    .input-group
      label A way to die (past tense)
      .input
        input(type="text", ng-model="death")
    .input-group
      label Noun (singular)
      .input
        input(type="text", ng-model="noun")
    .input-group
      label A nickname for a guy
      .input
        input(type="text", ng-model="nickname")
    button(ng-click="show=!show") Read Story
    
